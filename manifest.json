{
  "name": "Urban Outfitters Affinity Project",
  "version": "1.0",
  "description": "Track a user's affinity on Urban Outfitters",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/uo_128x128.png"
    }
  },
  "icons": {
    "128": "images/uo_128x128.png"
  },
  "manifest_version": 2
}
