{
  "name": "Urban Outfitters Affinity Project",
  "version": "1.0",
  "description": "Track a user's affinity on Urban Outfitters",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "content_scripts": [{
    "js": ["trackAffinity.js"],
    "matches":["https://www.urbanoutfitters.com/*"]
    // "persistent": false
  }],
  "page_action": {
    "default_icon": {
      "128": "images/uo_128x128.png"
    }
  },
  "icons": {
    "128": "images/uo_128x128.png"
  },
  "manifest_version": 2
}
